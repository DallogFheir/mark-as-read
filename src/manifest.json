{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "mark-as-read@dallog-fheir"
    }
  },
  "name": "Mark as Read",
  "version": "1.0",
  "description": "Mark webpages as read.",
  "options_page": "src/settings/settings.html",
  "background": {
    "scripts": [
      "src/background-script/background-script.ts"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content-script/content-script.ts"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/16/dark.png",
      "32": "icons/32/dark.png"
    },
    "default_title": "press to mark as read"
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'"
}